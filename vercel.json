{
  "version": 2,
  "buildCommand": "bash scripts/vercel-build.sh",
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "frontend/build/web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/web/$1"
    }
  ],
  "functions": {
    "backend/main.py": {
      "runtime": "python3.11"
    }
  },
  "env": {
    "PYTHONPATH": "backend"
  }
} 