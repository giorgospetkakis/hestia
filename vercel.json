{
  "version": 2,
  "buildCommand": "bash scripts/vercel-build.sh",
  "functions": {
    "backend/main.py": {
      "runtime": "python3.11"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/web/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "backend"
  }
} 